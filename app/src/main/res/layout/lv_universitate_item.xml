<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#C4F1FA"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/lvUniv_tv_nume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nume_facultate"
        android:textSize="18sp"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:textColor="@color/albastru_mai_inchis"
        app:layout_constraintHorizontal_bias="0.65"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"/>
    <ImageView
        android:id="@+id/lvUniv_iv_logo"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/logo_ase"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"/>
    <TextView
        android:id="@+id/lvUniv_tv_adresa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/blue"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="@string/adresa"
        app:layout_constraintStart_toEndOf="@id/lvUniv_iv_logo"
        app:layout_constraintTop_toBottomOf="@id/lvUniv_tv_nume"
        android:layout_marginStart="6dp"/>

    <TextView
        android:id="@+id/lvUniv_tv_telefon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/blue"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="@string/telefon"
        app:layout_constraintStart_toEndOf="@id/lvUniv_iv_logo"
        app:layout_constraintTop_toBottomOf="@id/lvUniv_tv_adresa"
        android:layout_marginStart="6dp"/>

    <TextView
        android:id="@+id/lvUniv_tv_website"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/blue"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="@string/website"
        app:layout_constraintStart_toEndOf="@id/lvUniv_iv_logo"
        app:layout_constraintTop_toBottomOf="@id/lvUniv_tv_telefon"
        android:layout_marginStart="6dp"/>

    <TextView
        android:id="@+id/lvUniv_tv_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/blue"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="@string/adresa"
        app:layout_constraintStart_toEndOf="@id/lvUniv_iv_logo"
        app:layout_constraintTop_toBottomOf="@id/lvUniv_tv_website"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="6dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>